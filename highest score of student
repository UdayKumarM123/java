import java.util.Scanner;

public class p7 {
    public static void main(String[] arg){
        int MAX_NUM=5;
        int[] scores=new int[MAX_NUM];

        Scanner sc=new Scanner(System.in);
        System.out.println("enter the scores:");
        for (int i=0; i<MAX_NUM; i++){
            System.out.println("enter student score:"+ (i+1)+":");
            scores[i]=sc.nextInt();

        int sum=0;
        int high_score=scores[0];
        for (int scot:scores){
            sum+=scot;
            if(scot>high_score){
                high_score =scot;
            }
        }
            System.out.println("\nExam score statistics:");
            System.out.println("Sum of all scores: " + sum);
            System.out.println("Highest score attained: " + high_score);


        }
    }
}
