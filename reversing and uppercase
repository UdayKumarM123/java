
import java.util.Scanner;

public class p5 {
    public static void main(String[] arg){

        // capacity
        StringBuffer sb1=new StringBuffer();
        System.out.println("capacity of sb1 is:" + sb1.capacity());
        StringBuffer sb2 = new StringBuffer("Hello");
        System.out.println("Capacity of StringBuffer object sb2: " + sb2.capacity());
        StringBuffer sb3 = new StringBuffer("Hello world");
        System.out.println("Capacity of StringBuffer object sb3: " + sb3.capacity());

        // reversing and uppercase
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the string");
        String inp=sc.nextLine();

        StringBuilder revers=new StringBuilder(inp);
        System.out.println(revers.reverse());
        System.out.println(revers.toString().toUpperCase());


        System.out.println("enter the string to append:");
        String d= sc.nextLine();
        revers.append(d);
        System.out.println(revers);
    }

}
